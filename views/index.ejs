<%- include ('./partials/header') %>
<%- include ('./partials/homenavbar') %>
<body>
	<div class="container">
		<hr>
		<div class="jumbotron">
			<h1 class="display-4">Bem vindo!</h1>
			<br>
			<p class="lead">Esse é um blog simples feito no curso de Formação node.</p>
			<hr class="my-4">
			<p>Está sendo feito inteiramente como objeto de estudo.</p>
		</div>
		<% articles.forEach(article => { %>
			<br>
			<div class="card">
				<div class="card-header">
					<h2><%= article.title %></h2>
				</div>
				<div class="card-body">
					<a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
				</div>
			</div>
		<% }) %>
		<hr>
		<div class="row">
			<div class="col col-12">
				<a href="/articles/page/2" class="btn btn-info" style="float:right"> Próximo -> </a>
			</div>
		</div>
		<hr>
	</div>	
</body>
<%- include ('./partials/footer') %>